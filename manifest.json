{
    "name": "ESPEON",
    "description": "Extensão para monitoramento de atenção em aulas remotas",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "lecture.html",
        "default_icon": "images/eye-solid.svg"
    },
    "permissions": [
        "activeTab",
        "tabCapture",
        "nativeMessaging",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://teams.microsoft.com/*",
                "https://meet.google.com/*",
                "https://*.zoom.us/*",
                "https://*.webex.com/*"
            ],
            "js": [
                "scripts/record.js",
                "scripts/trace.js",
                "scripts/api.js",
                "scripts/button.js"
            ]
        }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}